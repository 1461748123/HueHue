<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HueHue"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="HueHue.FixedColors"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="17*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="textBox" Height="24" Margin="10,10,28,0" TextWrapping="Wrap" Text="#000000" VerticalAlignment="Top" IsReadOnly="True" Grid.Row="1"/>
        <Button x:Name="button" Content="Pick" Margin="0,10,10,0" VerticalAlignment="Top" Height="24" Grid.Column="1" HorizontalAlignment="Right" Width="75" Grid.Row="1"/>
        <Button x:Name="button_Copy" Content="Apply" HorizontalAlignment="Right" Margin="0,0,10,10" Width="75" Height="24" Grid.Column="1" VerticalAlignment="Bottom" Grid.Row="1"/>
        <materialDesign:ColorZone Padding="16" materialDesign:ShadowAssist.ShadowDepth="Depth2" Mode="PrimaryMid" Grid.ColumnSpan="2" VerticalAlignment="Stretch" Content="Fixed Color"/>
    </Grid>
</UserControl>
