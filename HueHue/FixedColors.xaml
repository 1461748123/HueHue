<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HueHue"
             xmlns:controls="clr-namespace:ColorPickerLib.Controls;assembly=ColorPickerLib"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="HueHue.FixedColors"
             mc:Ignorable="d" 
            FontFamily="Segoe UI Light"
             d:DesignHeight="551" d:DesignWidth="600" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48.8"/>
            <RowDefinition/>
            <RowDefinition Height="50.4"/>
        </Grid.RowDefinitions>
        <materialDesign:ColorZone Padding="16" materialDesign:ShadowAssist.ShadowDepth="Depth2" Mode="PrimaryMid" VerticalAlignment="Stretch" Content="Fixed Color"/>
        <!--https://wpfcolorpickercontrol.codeplex.com/-->
        <Button x:Name="button" Content="Apply Color" HorizontalAlignment="Right" Margin="0,0,10,10.2" Grid.Row="2" Width="115" Height="32" VerticalAlignment="Bottom" Click="ApplyColor"/>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1">
            <Grid  HorizontalAlignment="Left" Height="452" Grid.Row="1" VerticalAlignment="Top" Width="600" Grid.RowSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="359*"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="181*"/>
                </Grid.ColumnDefinitions>
                <controls:ColorCanvas x:Name="colorPicker" Margin="10,10,0,12" HorizontalAlignment="Left" Width="343" SelectedColorChanged="colorPicker_SelectedColorChanged"/>
                <Grid x:Name="GridFixedColorSettings" Grid.ColumnSpan="2" Grid.Column="1" Margin="0,10,6,386">
                    <ToggleButton x:Name="breathToggle" Style="{StaticResource MaterialDesignSwitchToggleButton}" VerticalAlignment="Top" ToolTip="MaterialDesignSwitchToggleButton" IsChecked="{Binding Breath}" Height="18" HorizontalAlignment="Right" Width="46" />
                    <Label Content="Breathing:" Margin="0,1,178,0" VerticalAlignment="Top" Height="25"/>
                    <Label Content="Random:" HorizontalAlignment="Left" Margin="6,31,0,0" VerticalAlignment="Top" Height="25" Width="51"/>
                    <ToggleButton x:Name="randomToggle" Style="{StaticResource MaterialDesignSwitchToggleButton}" VerticalAlignment="Top" Margin="0,31,0,0" ToolTip="MaterialDesignSwitchToggleButton" IsChecked="{Binding Random}" Height="18" HorizontalAlignment="Right" Width="46" />
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
