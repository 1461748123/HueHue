<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HueHue"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="HueHue.FixedColors"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="42*"/>
            <RowDefinition Height="41*"/>
            <RowDefinition Height="172*"/>
        </Grid.RowDefinitions>
        <xctk:ColorPicker Name="ClrPcker_Background" Margin="10,10,10,0" Grid.Row="2" SelectedColorChanged="ClrPcker_Background_SelectedColorChanged" Height="23" VerticalAlignment="Top"/>
        <materialDesign:ColorZone Padding="16" materialDesign:ShadowAssist.ShadowDepth="Depth2" Mode="PrimaryMid" VerticalAlignment="Stretch" Content="Fixed Color"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="26" Margin="54,10,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label" Content="Color:" HorizontalAlignment="Left" Margin="10,11,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <Button x:Name="button" Content="Apply" HorizontalAlignment="Left" Margin="215,10,0,0" Grid.Row="3" VerticalAlignment="Top" Width="75"/>
    </Grid>
</UserControl>
