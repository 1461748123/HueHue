<UserControl x:Class="HueHue.Views.JoystickMode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:controls="clr-namespace:ColorTools;assembly=ColorTools"
             xmlns:local="clr-namespace:HueHue.Views"
             mc:Ignorable="d" 
             d:DesignHeight="510" d:DesignWidth="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="Auto" MinHeight="84.8"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <materialDesign:ColorZone x:Name="colorZone" Padding="16" materialDesign:ShadowAssist.ShadowDepth="Depth2" Mode="PrimaryMid" VerticalAlignment="Stretch" Margin="0,0,-0.4,4" Content="Joystick Responsive"/>
        <ComboBox Margin="109,14,114.6,0" Grid.Row="1" VerticalAlignment="Top" Height="28" x:Name="combo_joysticks" SelectionChanged="combo_joysticks_SelectionChanged"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,22,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Height="16" Width="94"><Run Text="Selected Joystick:"/></TextBlock>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="2" Margin="10,10,0,10" x:Name="s">
            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Vertical" x:Name="StackColors" CanVerticallyScroll="True"/>
        </ScrollViewer>
        <Button Content="Start" Margin="0,47,9.6,0" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Right" Width="100" Click="Button_Click_1"/>
        <Button Content="Refresh" HorizontalAlignment="Right" Margin="0,10,9.6,0" Grid.Row="1" VerticalAlignment="Top" Width="100" Click="Button_Click"/>
        <ComboBox Margin="10,47,114.6,0" Grid.Row="1" VerticalAlignment="Top" Height="28">
            <ComboBoxItem>If Multiple buttons, color LEDs alternated</ComboBoxItem>
            <ComboBoxItem>If Multiple buttons, divide the strip in sections</ComboBoxItem>
        </ComboBox>
        <Button Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                Margin="0,0,9.6,10.4" HorizontalAlignment="Right"
                ToolTip="Add Button to Color" VerticalAlignment="Bottom" Click="Button_AddButtonColor_Click" Grid.Row="2">
            <materialDesign:PackIcon Kind="Plus" Height="24" Width="24" />
        </Button>
        <Button Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                Margin="0,0,54.6,10.4" HorizontalAlignment="Right"
                ToolTip="Add Button to Brightness" VerticalAlignment="Bottom" Click="Button_AddButtonColor_Click" Grid.Row="2">
            <materialDesign:PackIcon Kind="Brightness6" Height="24" Width="24"/>
        </Button>
        <materialDesign:DialogHost  x:Name="dialogHost" CloseOnClickAway="True" Margin="10,10.2,9.6,10.4" Grid.Row="2" DialogClosing="dialogHost_DialogClosing" />

    </Grid>
</UserControl>
